{
	"name": "metal-site-pwa",
	"version": "0.0.0",
	"description": "Projetc PWA with Metal.js",
	"license": "BSD",
	"repository": "CamisLuisa/metal-site-pwa",
	"engines": {
		"node": ">=0.12.0",
		"npm": ">=3.0.0"
	},
	"main": "lib/SitePwa.js",
	"jsnext:main": "src/SitePwa.js",
	"files": [
		"lib",
		"src",
		"test"
	],
	"scripts": {
		"build": "webpack",
		"compile": "babel --presets metal -d lib/ src/",
		"postinstall": "npm run build",
		"prepublish": "npm run compile",
		"start": "http-server . -p 4000",
		"test": "jest"
	},
	"keywords": [
		"metal"
	],
	"babel": {
		"presets": [
			"metal",
			"metal-jsx"
		]
	},
	"dependencies": {
		"ajv": "^6.1.1",
		"bootstrap": "^4.0.0",
		"metal-jsx": "^2.0.0",
		"metal-router": "^3.7.1"
	},
	"devDependencies": {
		"babel-cli": "^6.4.5",
		"babel-core": "^6.25.0",
		"babel-loader": "^7.0.0",
		"babel-plugin-transform-node-env-inline": "^0.1.1",
		"babel-preset-metal": "^4.0.0",
		"babel-preset-metal-jsx": "^0.0.2",
		"css-loader": "^0.28.4",
		"http-server": "^0.9.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^20.0.4",
		"metal-lerna-jest-resolver": "^1.0.0",
		"metal-jest-serializer": "^1.0.1",
		"node-sass": "^4.5.3",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.18.2",
		"webpack": "^3.0.0"
	},
	"jest": {
		"resolver": "metal-lerna-jest-resolver",
		"snapshotSerializers": [
			"metal-jest-serializer"
		],
		"moduleNameMapper": {
			"^.+\\.scss$": "identity-obj-proxy"
		}
	}
}
